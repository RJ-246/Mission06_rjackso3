@{ViewData["Title"] = "Delete Movie";
}
@model NewMovieData
<h2>Confirm Movie Deletion</h2>
<h4>Are you sure you want to delete @Model.Title from your movie collection?</h4>


<form method="post" asp-action="Delete">
    <input hidden asp-for="MovieID" />
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-primary">Cancel</a>
</form>


